@model Glamping_Addventure2.Models.Role

@{
    ViewData["Title"] = "Crear Rol";
}

<div class="container mt-4" style="max-width: 1000px;">
    <!-- Contenedor más ancho y elevado -->
    <h2 class="text-center" style="color: #1a4a5a;">Crear Rol</h2>

    <form asp-action="Create" class="mt-4">
        <div class="form-group mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del rol" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="col-md-12 mb-3">
            <label class="form-label">Permisos:</label>
            <div class="permissions-container p-3">
                <div class="row">
                    @foreach (var permiso in ViewBag.Permisos)
                    {
                        <div class="col-md-4 mb-2 d-flex align-items-center">
                            <label class="switch">
                                <input type="checkbox" name="selectedPermisos" value="@permiso.Idpermiso" />
                                <span class="slider round"></span>
                            </label>
                            <label class="form-check-label ms-2">@permiso.NombrePermisos</label>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center mt-4 gap-2">
            <button type="submit" class="btn btn-success btn-sm">Crear Rol</button>
            <a asp-action="Index" class="btn btn-secondary btn-sm">Cancelar</a>
        </div>
    </form>
</div>

<style>
    /* Estilos adicionales para el formulario */
    .container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px; /* Contenedor más cerca de la parte superior */
    }

    .permissions-container {
        max-height: 120px; /* Limita la altura de la sección de permisos */
        overflow-y: auto; /* Activa el desplazamiento vertical */
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
        padding: 15px;
    }

    /* Estilos para el toggle deslizante */
    .switch {
        position: relative;
        display: inline-block;
        width: 40px;
        height: 20px;
    }

        .switch input {
            display: none; /* Oculta el checkbox */
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 20px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 14px;
            width: 14px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            border-radius: 50%;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #66bb6a;
    }

        input:checked + .slider:before {
            transform: translateX(20px);
        }

    .btn {
        transition: background-color 0.3s;
    }

        .btn:hover {
            opacity: 0.8;
        }
</style>
